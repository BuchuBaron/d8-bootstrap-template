{# Specify that we want to hide the content so we can print our fields individually #}
{{ content|without('field_file','field_colour') }}

{% set classes = [
  'element',
  'element--layout-downloads',
  'paragraph--type--' ~ paragraph.bundle|clean_class,
  view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
  content.field_colour ? content.field_colour[0]['#markup'],
] %}

<div{{ attributes.addClass(classes) }}>
    {{ content|without('field_colour') }}
</div>
